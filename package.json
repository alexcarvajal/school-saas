{
  "name": "school-saas",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "pnpm --filter web dev",
    "dev:mobile": "pnpm --filter mobile start",
    "build": "turbo run build",
    "db:studio": "pnpm --filter @school-saas/database db:studio",
    "db:migrate": "pnpm --filter @school-saas/database db:migrate",
    "db:seed": "pnpm --filter @school-saas/database db:seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  
  "devDependencies": {
    "turbo": "^1.11.0",
    "typescript": "^5.3.3"
  }
}